@using Microsoft.AspNetCore.Http
@model Clinic_web_app.Models.StaffAccount

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header" style="padding: 5px 0.5rem;">
        <div class="container-fluid">
            <div class="row mb-2">
                <!--<div class="col-sm-6">
                    
                </div>--><!-- /.col -->
                <div class="col-sm-12">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="breadcrumb-item active">Staff Account</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <dl class="col-sm-4">
                    <h3 class="m-0">Account Detail</h3>
                    <dt class="col-sm-1">
                        @Html.DisplayNameFor(model => model.Image)
                    </dt>
                    <dd class="col-sm-3">
                        <img src="~/@Model.Image" width="150" />
                    </dd>
                    <dt class="col-sm-1">
                        @Html.DisplayNameFor(model => model.Username)
                    </dt>
                    <dd class="col-sm-3">
                        @Html.DisplayFor(model => model.Username)
                    </dd>
                    <dt class="col-sm-1">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-3">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-1">
                        @Html.DisplayNameFor(model => model.Role)
                    </dt>
                    <dd class="col-sm-3">
                        @Html.DisplayFor(model => model.Role)
                    </dd>
                </dl>
                <div class="col-sm-8">
                   
                        <h3 class="m-0">Registered Course</h3>
                 
                    <table class="table table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Course Name</th>
                                <th>Lecture</th>
                                <th>Location</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Enrollments)
                            {
                                <tr>
                                    <td>@item.Course.CourseName</td>
                                    <td>@item.Course.Lectures</td>
                                    <td>@item.Course.Location</td>
                                    <td>@item.Course.StartDate</td>
                                    <td>@item.Course.EndDate</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <br />
           
            <div>
                <a asp-action="Edit" asp-route-id="@Model.AccountId">Edit</a> |
                @if (Context.Session.GetString("userRole").Equals("Manager"))
                {
                    <a asp-action="Index">Back to List</a>
                }
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
